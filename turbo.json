{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "start": {
            "dependsOn": ["^start"]
        },
        "init": {
            "dependsOn": ["^init"]
        },
        "lint": {},
        "test": {},
        "test:e2e": {}
    }
}
